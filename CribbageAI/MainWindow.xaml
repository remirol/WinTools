<Window x:Class="CribbageAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cribbage AI/probabilities" 
        SizeToContent="WidthAndHeight" 
        MinHeight="200" 
        MinWidth="600"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner"
        >
    <DockPanel LastChildFill="False">
        <ListBox Name="logWindow" DockPanel.Dock="Right" MinWidth="300" MaxHeight="400" ItemsSource="{Binding Path=logMessages}"></ListBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Left" Name="opposingHand" MinHeight="80"></StackPanel>
        <ListBox Name="opponentScore" DockPanel.Dock="Top" MinHeight="100"></ListBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Left" Name="upcardPanel">
            <Button Name="deal" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20,10" Height="30" Width="60" Click="deal_Click">Deal</Button>
            <Button Name="eval" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,10" Height="30" Width="60" Click="eval_Click">Evaluate</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Left" Name="playerHand" MinHeight="80"></StackPanel>
        <ListBox Name="playerScore" DockPanel.Dock="Bottom" MinHeight="100"></ListBox>
    </DockPanel>
</Window>
